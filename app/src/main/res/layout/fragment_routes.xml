<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    tools:context=".presentation.routes.RoutesFragment">

    <!-- Header with icon and title -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/saves_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_saves2"
            android:contentDescription="Saves icon"
            android:layout_marginEnd="12dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/your_saves_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Saves"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold" />

    </LinearLayout>

    <!-- Content area for saved items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_items_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/header_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty state when no saves -->
    <LinearLayout
        android:id="@+id/empty_state_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_saves2"
            android:contentDescription="Empty saves icon"
            android:layout_marginBottom="16dp"
            app:tint="@color/transport_text_on_tinted" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No saved routes yet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/transport_text_on_tinted"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save your favorite bus stops and routes for quick access"
            android:textSize="14sp"
            android:textColor="@color/transport_text_on_tinted"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:maxLines="2" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
