<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header with Title and X Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_go"
                android:tint="#663399"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Directions"
                android:textColor="#663399"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:tint="#663399"
            android:scaleType="centerInside"
            android:contentDescription="Close" />
    </LinearLayout>

    <!-- From Location (Modern Card Style, less round, outlined circle left icon) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:backgroundTint="#F3F1F7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="0dp"
                android:paddingEnd="8dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/circle_purple_outline"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp" />
                <EditText
                    android:id="@+id/edit_from_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#663399"
                    android:hint="Current Location"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textSize="16sp"
                    android:textColorHint="#B39DDB"
                    android:maxLines="1"
                    android:inputType="text"
                    android:ellipsize="end"
                    android:gravity="center_vertical|start"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ImageButton
            android:id="@+id/button_add_from"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/modern_button_bg"
            android:src="@drawable/ic_addstop"
            android:tint="#663399"
            android:scaleType="centerInside"
            android:padding="2dp"
            android:contentDescription="Add stop" />
    </LinearLayout>

    <!-- To Location (Modern Card Style, less round, filled circle left icon) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:backgroundTint="#F3F1F7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="0dp"
                android:paddingEnd="8dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/circle_purple_filled"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp" />
                <EditText
                    android:id="@+id/edit_to_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#663399"
                    android:hint="To Where?"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textSize="16sp"
                    android:textColorHint="#B39DDB"
                    android:maxLines="1"
                    android:inputType="text"
                    android:ellipsize="end"
                    android:gravity="center_vertical|start" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ImageButton
            android:id="@+id/button_update_to"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/modern_button_bg"
            android:src="@drawable/ic_enter"
            android:tint="#663399"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:contentDescription="Update directions" />
    </LinearLayout>

    <!-- Summary Text -->
    <TextView
        android:id="@+id/summary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#663399"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone" />

    <!-- Fixed Height ScrollView for Directions -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:fillViewport="true"
        android:background="@android:color/transparent">
        
        <LinearLayout
            android:id="@+id/steps_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent" />
    </ScrollView>

</LinearLayout> 