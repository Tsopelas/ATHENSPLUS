<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/dropdown_menu_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/station_name_greek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/station_name_megaro_greek_menu"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:id="@+id/station_name_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/station_name_megaro_english_menu"
            android:textColor="?attr/colorOnSurface"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="2dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/start_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#663399">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_checks"
                    app:tint="@android:color/white"
                    android:contentDescription="@string/check_mark_icon" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/timetable_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#663399">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_time"
                    app:tint="@android:color/white"
                    android:contentDescription="@string/time_icon" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/airport_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#663399">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    app:srcCompat="@drawable/ic_airport"
                    app:tint="@android:color/white"
                    android:contentDescription="@string/airport_icon" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/harbor_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#663399">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_harbor"
                    app:tint="@android:color/white"
                    android:contentDescription="@string/harbor_icon" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout> 