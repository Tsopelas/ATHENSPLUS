<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Mode and Line Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/text_mode"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:textSize="28sp"
                android:background="@drawable/mode_icon_bg"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#2D3550"
                    android:textStyle="bold"
                    android:text="Take Metro Line 1" />

                <TextView
                    android:id="@+id/text_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_badge_bg"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="6dp"
                    android:text="M1"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:text="5 min" />
        </LinearLayout>

        <!-- Route Details -->
        <LinearLayout
            android:id="@+id/route_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/route_details_bg"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#2D3550"
                android:text="Departure: Syntagma Station" />

            <TextView
                android:id="@+id/text_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#2D3550"
                android:text="Arrival: Monastiraki Station"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/text_next_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#4CAF50"
                android:text="Next arrival in 3 minutes"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Walking Instructions (if applicable) -->
        <LinearLayout
            android:id="@+id/walking_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="64dp"
            android:visibility="gone"
            android:background="@drawable/walking_instructions_bg"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_walking"
                app:tint="#666666"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/text_walking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#2D3550"
                android:text="Walk 200m to next station" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView> 