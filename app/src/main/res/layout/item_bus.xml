<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Bus Number -->
        <TextView
            android:id="@+id/text_bus_number"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#6200EE"
            android:background="@drawable/bus_number_bg"
            android:layout_marginEnd="16dp" />

        <!-- Bus Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_bus_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#2D3550"
                android:textStyle="bold"
                android:text="To Syntagma" />

            <TextView
                android:id="@+id/text_arrival_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:text="Arriving in 3 min"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Bus Status -->
        <TextView
            android:id="@+id/text_bus_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On Time"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/status_badge_bg"
            android:padding="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView> 