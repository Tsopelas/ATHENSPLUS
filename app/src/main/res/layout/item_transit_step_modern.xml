<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Unified Card Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/modern_button_bg">

        <!-- Step Content Container (Main visible part) -->
        <LinearLayout
            android:id="@+id/step_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/step_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/transit_step_icon_description"
            app:tint="#663399"
            android:src="@drawable/ic_walking" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/step_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/transport_text_on_tinted"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_bold"
                android:maxLines="3"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/step_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginTop="4dp" />

            <!-- Greek station name container for directions -->
            <LinearLayout
                android:id="@+id/station_name_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/station_name_greek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/transport_text_on_tinted"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/step_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/bus_number_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/expand_arrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_dropdown"
                android:layout_marginStart="8dp"
                android:padding="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:tint="#663399"
                android:contentDescription="@string/expand_details" />

        </LinearLayout>
    </LinearLayout>

    <!-- Expanded Wait Time Information -->
    <LinearLayout
        android:id="@+id/wait_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/route_details_bg"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_time"
            android:contentDescription="@string/time_icon_description"
            app:tint="#663399"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/wait_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/loading_wait_time"
            android:textColor="@color/transport_text_on_tinted"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium" />

        <TextView
            android:id="@+id/next_departure_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#B39DDB"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_medium" />

    </LinearLayout>

        <!-- Subtle separator line when expanded -->
        <View
            android:id="@+id/separator_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#20663399"
            android:visibility="gone" />

        <!-- Expandable Detailed Content - Part of the same unified card -->
        <LinearLayout
            android:id="@+id/expanded_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="12dp">

        <!-- Walking Directions Map Container (Square 1:1 aspect ratio) -->
        <FrameLayout
            android:id="@+id/walking_map_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:background="@drawable/map_rounded_corners">

            <com.google.android.gms.maps.MapView
                android:id="@+id/walking_directions_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <!-- Transit Detailed Information Container -->
        <LinearLayout
            android:id="@+id/transit_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/transit_details_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transit_details_placeholder"
                android:textColor="@color/transport_text_on_tinted"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium" />

        </LinearLayout>

        <!-- General Placeholder for Future Step Types -->
        <LinearLayout
            android:id="@+id/general_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/general_details_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/step_details_placeholder"
                android:textColor="@color/transport_text_on_tinted"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <!-- Purple Connecting Line (except for last item) -->
    <View
        android:id="@+id/connecting_line"
        android:layout_width="2dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal"
        android:background="#663399"
        android:visibility="visible" />

</LinearLayout> 