<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="48dp"
        android:clipToPadding="false">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="24dp"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_purple_filled">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/athens_isolated2"
                    android:contentDescription="@string/app_logo_description"
                    android:scaleType="fitCenter" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/athens_plus"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/navigate_with_ease"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="#663399"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_semibold"
                android:background="@drawable/rounded_button_bg_gray"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />
        </LinearLayout>

        <!-- My Account Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_account"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/my_routes_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_saves"
                    android:contentDescription="@string/my_routes_icon_description"
                    app:tint="#663399"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/my_routes"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/surface_tint"
                android:layout_marginStart="64dp" />

            <LinearLayout
                android:id="@+id/saved_places_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_favorite"
                    android:contentDescription="@string/saved_places_icon_description"
                    app:tint="#663399"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/saved_places"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/surface_tint"
                android:layout_marginStart="64dp" />

            <LinearLayout
                android:id="@+id/recent_routes_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_recent"
                    android:contentDescription="@string/recent_routes_icon_description"
                    app:tint="#663399"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/recent_routes"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/surface_tint"
                android:layout_marginStart="64dp" />

            <LinearLayout
                android:id="@+id/personal_info_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_personalinfo"
                    android:contentDescription="@string/personal_info_icon_description"
                    app:tint="#663399"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/personal_info"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/surface_tint"
                android:layout_marginStart="64dp" />

            <LinearLayout
                android:id="@+id/subscription_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_subscription"
                    android:contentDescription="@string/subscription_icon_description"
                    app:tint="#663399"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/subscription"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Settings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/theme_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_theme"
                    android:contentDescription="@string/theme_icon_description"
                    app:tint="#663399"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/theme"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/surface_tint"
                android:layout_marginStart="64dp" />

            <LinearLayout
                android:id="@+id/language_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_language"
                    android:contentDescription="@string/language_icon_description"
                    app:tint="#663399"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/language"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/surface_tint"
                android:layout_marginStart="64dp" />

            <LinearLayout
                android:id="@+id/notification_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    android:contentDescription="@string/notifications_icon_description"
                    app:tint="#663399"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/notifications"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/surface_tint"
                android:layout_marginStart="64dp" />

            <LinearLayout
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout"
                    android:contentDescription="@string/logout_icon_description"
                    app:tint="#663399"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/log_out"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_medium" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 