<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF">

    <!-- Header with menu button and logo -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <ImageButton
            android:id="@+id/button_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu" />

        <ImageView
            android:id="@+id/image_athensplus"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:contentDescription="Athens Plus Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/athensplus" />
    </RelativeLayout>

    <!-- Search Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_to"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/modern_button_bg"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#663399"
                android:hint="Where do you want to go?"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColorHint="#B39DDB"
                android:maxLines="1"
                android:inputType="text"
                android:scrollHorizontally="true"
                android:scrollbars="horizontal"
                android:gravity="center_vertical|start"
                android:elevation="0dp"
                android:singleLine="true"
                android:ellipsize="none" />

            <ImageButton
                android:id="@+id/button_directions"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/modern_button_bg"
                android:contentDescription="Get Directions"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_go"
                android:tint="#663399"
                android:elevation="0dp" />
        </LinearLayout>

        <!-- Choose on Map Card -->
        <LinearLayout
            android:id="@+id/choose_on_map_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/modern_button_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mapsearching"
                android:tint="#663399"
                android:scaleType="centerInside"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose on Map"
                android:textColor="#663399"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold" />

        </LinearLayout>
    </LinearLayout>

    <!-- Map Section: CardView restored, margins unified -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:layout_marginBottom="0dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Reset Map Button -->
                <LinearLayout
                    android:id="@+id/reset_map_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:background="@drawable/modern_button_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset Map"
                        android:textColor="#663399"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_clear"
                        android:tint="#663399"
                        android:scaleType="centerInside" />

                </LinearLayout>

                <!-- Piraeus Gate Map Button -->
                <LinearLayout
                    android:id="@+id/harbor_gate_map_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="80dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:background="@drawable/harbor_button_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_harbor"
                        android:tint="@android:color/white"
                        android:scaleType="centerInside"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peiraias Gate Map"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_bold" />

                </LinearLayout>

                <!-- Airport Timetable Button -->
                <LinearLayout
                    android:id="@+id/airport_timetable_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="80dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:background="@drawable/airport_button_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_airport"
                        android:tint="@android:color/white"
                        android:scaleType="centerInside"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Airport Metro Timetable"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_bold" />

                </LinearLayout>

                <!-- Station Selection Indicator -->
                <LinearLayout
                    android:id="@+id/station_selection_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:padding="12dp"
                    android:background="@drawable/map_rounded_corners"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="5">

                    <!-- Start Station -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/start_station_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Station"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="#663399"/>
                    </LinearLayout>

                    <!-- Swap Arrow -->
                    <ImageView
                        android:id="@+id/swap_stations_button"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_arrow"
                        android:tint="#663399"
                        android:padding="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"/>

                    <!-- Interchange Station -->
                    <LinearLayout
                        android:id="@+id/interchange_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/interchange_station_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_medium"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="interchange"
                            android:textSize="10sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/montserrat_regular"/>
                    </LinearLayout>

                    <!-- Second Arrow (only visible with interchange) -->
                    <ImageView
                        android:id="@+id/second_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow"
                        android:tint="#663399"
                        android:padding="2dp"
                        android:visibility="gone"/>

                    <!-- End Station -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/end_station_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Station"
                            android:textSize="14sp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="#663399"/>
                    </LinearLayout>

                    <!-- Enter Button -->
                    <ImageButton
                        android:id="@+id/enter_button"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_go"
                        android:background="@drawable/rounded_button_bg"
                        android:scaleType="centerInside"
                        android:padding="6dp"
                        android:tint="@android:color/white"
                        android:contentDescription="Enter button"/>

                </LinearLayout>

            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- Buttons Section: horizontal LinearLayout, equally spaced -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:clipChildren="false"
            android:clipToPadding="false">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">
                <LinearLayout
                    android:id="@+id/button_mode_picker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/modern_button_bg">
                    <ImageView
                        android:id="@+id/mode_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_metro"
                        android:tint="#663399" />
                    <TextView
                        android:id="@+id/mode_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Metro"
                        android:textColor="#663399"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:clipChildren="false"
            android:clipToPadding="false">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">
                <LinearLayout
                    android:id="@+id/button_line_picker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/modern_button_bg">

                    <View
                        android:id="@+id/line_dot"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="gone"
                        android:background="@drawable/dropdown_dot_green" />

                    <TextView
                        android:id="@+id/line_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Lines"
                        android:textColor="#663399"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_bold" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_arrow_drop_down"
                        android:tint="#663399" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </LinearLayout>
</LinearLayout> 